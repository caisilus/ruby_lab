<% content_for :sidebar do %>
  <!-- This example requires Tailwind CSS v2.0+ -->
  <div data-controller="sidebar-animation"
       data-sidebar-animation-canvas-start-value="opacity-0"
       data-sidebar-animation-canvas-end-value="opacity-100"
       data-sidebar-animation-canvas-menu-start-value="-translate-x-full"
       data-sidebar-animation-canvas-menu-end-value="translate-x-0"
       data-sidebar-animation-close-button-start-value="opacity-0"
       data-sidebar-animation-close-button-end-value="opacity-100"
       data-sidebar-animation-duration-value="300">
    <!-- Mobile button for sidebar -->
    <div class="fixed top-3 left-2 z-10 flex items-center sm:hidden">
      <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
              aria-controls="mobile-menu" aria-expanded="false"
              data-action="sidebar-animation#startAnimation">
        <span class="sr-only">Open sidebar</span>
        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
             stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
          <!--path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /-->
        </svg>
      </button>
    </div>
    <aside class="hidden sm:block fixed top-0 py-16 z-20 w-64 overflow-y-auto"
           data-sidebar-animation-target="sidebarMenu">

      <!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
      <div class="fixed inset-0 flex z-40 md:hidden" role="dialog" aria-modal="true">
        <!--
          Off-canvas menu overlay, show/hide based on off-canvas menu state.

          Entering: "transition-opacity ease-linear duration-300"
            From: "opacity-0"
            To: "opacity-100"
          Leaving: "transition-opacity ease-linear duration-300"
            From: "opacity-100"
            To: "opacity-0"
        -->
        <div class="fixed inset-0 bg-gray-600 bg-opacity-75 transition-opacity ease-linear duration-300 opacity-0"
             aria-hidden="true"
             data-sidebar-animation-target="canvasOverlay"></div>

        <!--
          Off-canvas menu, show/hide based on off-canvas menu state.

          Entering: "transition ease-in-out duration-300 transform"
            From: "-translate-x-full"
            To: "translate-x-0"
          Leaving: "transition ease-in-out duration-300 transform"
            From: "translate-x-0"
            To: "-translate-x-full"
        -->
        <div class="relative flex-1 flex flex-col max-w-xs w-full pt-5 pb-4 bg-white transform transition-transform ease-in-out duration-300 -translate-x-full"
             data-sidebar-animation-target="canvasMenu">
          <!--
            Close button, show/hide based on off-canvas menu state.

            Entering: "ease-in-out duration-300"
              From: "opacity-0"
              To: "opacity-100"
            Leaving: "ease-in-out duration-300"
              From: "opacity-100"
              To: "opacity-0"
          -->
          <div class="absolute top-0 right-0 -mr-12 pt-2 transition-opacity ease-in-out duration-500 opacity-0"
               data-sidebar-animation-target="closeButton">
            <button type="button" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                    data-action="sidebar-animation#startAnimation">
              <span class="sr-only">Close sidebar</span>
              <!-- Heroicon name: outline/x -->
              <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <div class="flex-shrink-0 flex items-center px-4">
            <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-logo-indigo-600-mark-gray-800-text.svg" alt="Workflow">
          </div>
          <div class="z-40 mt-4 flex-1 h-0 overflow-y-auto">
            <nav class="px-2 py-1 space-y-1">
              <%= render 'shared/sidebar' %>
            </nav>
          </div>
        </div>

        <div class="flex-shrink-0 w-14" aria-hidden="true">
          <!-- Dummy element to force sidebar to shrink to fit close icon -->
        </div>
      </div>

      <div class="hidden sm:block min-h-screen flex flex-col flex-grow border-r border-gray-200 pt-5 pb-4 bg-white overflow-y-auto">
        <nav class="flex-1 px-2 space-y-1 bg-white" aria-label="Sidebar">
          <%= render 'shared/sidebar' %>
        </nav>
      </div>
    </aside>
  </div>

  <main class="overflow-y-auto sm:mt-16 py-6 px-8 sm:ml-64">
    <%= yield %>
  </main>
<% end %>
<%= render template: "layouts/application" %>